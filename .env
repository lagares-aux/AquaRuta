# Supabase local development configuration
# WARNING: Do not use these credentials in production.

# Postgres
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Supabase keys & JWT
# For local usage, simple secrets are acceptable. Change if needed.
JWT_SECRET=super-secret-jwt-token-with-at-least-32-characters
ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.anon_key_local_development
SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.service_role_key_local_development

# Public URL / API URL
# Flutter PWA backend (puedes cambiarlo luego si montas un backend separado)
API_EXTERNAL_URL=http://localhost:8000

# Gotrue (Auth)
GOTRUE_SITE_URL=http://localhost:3000
GOTRUE_API_HOST=0.0.0.0
GOTRUE_API_PORT=9999
GOTRUE_DB_DRIVER=postgres
GOTRUE_DB_DATABASE_URL=postgres://postgres:${POSTGRES_PASSWORD}@db:5432/postgres
GOTRUE_JWT_SECRET=${JWT_SECRET}
GOTRUE_JWT_DEFAULT_GROUP_NAME=authenticated
GOTRUE_JWT_EXP=3600
GOTRUE_LOG_LEVEL=info
GOTRUE_EXTERNAL_EMAIL_ENABLED=true
GOTRUE_MAILER_AUTOCONFIRM=true

# PostgREST (REST)
PGRST_DB_URI=postgres://postgres:${POSTGRES_PASSWORD}@db:5432/postgres
PGRST_DB_SCHEMA=public
PGRST_DB_ANON_ROLE=anon
PGRST_JWT_SECRET=${JWT_SECRET}
PGRST_SERVER_PORT=3000

# Realtime
DB_HOST=db
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=${POSTGRES_PASSWORD}
PORT=4000
JWT_SECRET=${JWT_SECRET}

# Storage
STORAGE_POSTGRES_CONNECTION=postgres://postgres:${POSTGRES_PASSWORD}@db:5432/postgres
STORAGE_JWT_SECRET=${JWT_SECRET}
STORAGE_ANON_KEY=${ANON_KEY}
STORAGE_SERVICE_ROLE_KEY=${SERVICE_ROLE_KEY}
STORAGE_BACKEND=local
FILE_SIZE_LIMIT=52428800
STORAGE_S3_BUCKET=
STORAGE_S3_REGION=

# Meta (Postgres Meta)
PG_META_CONNECTION=postgres://postgres:${POSTGRES_PASSWORD}@db:5432/postgres

# Studio
STUDIO_PG_META_URL=http://meta:8080
STUDIO_API_URL=http://rest:3000
STUDIO_AUTH_URL=http://auth:9999
STUDIO_STORAGE_URL=http://storage:5000
STUDIO_REALTIME_URL=ws://realtime:4000/socket
STUDIO_SITE_URL=http://localhost:3000
